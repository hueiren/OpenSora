<Project>
  <Project.ExportOptions Namespace="OpenSora.Viewer.UI" Class="MainPanel" OutputPath="D:\Projects\OpenSora\src\Viewer\UI" />
  <VerticalStackPanel Spacing="8">
    <VerticalStackPanel.Proportions>
      <Proportion Type="Auto" />
      <Proportion Type="Fill" />
    </VerticalStackPanel.Proportions>
    <HorizontalStackPanel Spacing="8" Id="_boxTop">
      <HorizontalStackPanel.Proportions>
        <Proportion Type="Auto" />
        <Proportion Type="Auto" />
        <Proportion Type="Part" />
        <Proportion Type="Part" />
      </HorizontalStackPanel.Proportions>
      <TextBox Text="" Readonly="True" Id="_textPath" Width="300" />
      <TextButton Text="Change..." Id="_buttonChange" />
      <HorizontalStackPanel Spacing="8" HorizontalAlignment="Center" Id="_boxAnimation">
        <Label Text="Start" />
        <SpinButton Minimum="0" Integer="True" Id="_numericAnimationStart" Width="32" />
        <Label Text="Step" />
        <SpinButton Maximum="8" Minimum="0" Value="8" Integer="True" Id="_numericAnimationStep" Width="32" />
        <Label Text="Total: 64" Id="_textAnimationTotal" />
      </HorizontalStackPanel>
      <TextButton Text="About" Id="_buttonAbout" HorizontalAlignment="Right" />
    </HorizontalStackPanel>
    <HorizontalStackPanel Spacing="8">
      <HorizontalStackPanel.Proportions>
        <Proportion Type="Auto" />
        <Proportion Type="Fill" />
      </HorizontalStackPanel.Proportions>
      <VerticalStackPanel Spacing="8" Width="150">
        <VerticalStackPanel.Proportions>
          <Proportion Type="Auto" />
          <Proportion Type="Auto" />
          <Proportion Type="Fill" />
        </VerticalStackPanel.Proportions>
        <ComboBox Id="_comboResourceType" HorizontalAlignment="Stretch">
          <ListItem Text="Textures" />
          <ListItem Text="Models" />
          <ListItem Text="Images" />
          <ListItem Text="Animations" />
        </ComboBox>
        <TextBox Text="" Id="_textFilter" />
        <ListBox Id="_listFiles" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
          <ListItem Text="TEXTURE1._DS" />
          <ListItem Text="TEXTURE2._DS" />
        </ListBox>
      </VerticalStackPanel>
      <Panel>
        <Panel Id="_panelViewer" />
        <Label Text="Processing mesh 23/40..." Id="_textStatus" VerticalAlignment="Bottom" />
      </Panel>
    </HorizontalStackPanel>
  </VerticalStackPanel>
</Project>